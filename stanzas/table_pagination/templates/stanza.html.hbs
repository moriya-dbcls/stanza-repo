<style>
div.main {
      font-family: "Arial",san-serif;
}
div#paginationTop, div#paginationBottom {
    text-align: {{button_align}};
    clear: both;
    position: relative;
}
div.page_slider_div {
    width: 100%;
    height: 20px;
    margin: 10px 0px 20px 0px;
    text-align: left;
}
div.page_slider_bar {
    width: calc(100% - 40px);
    margin-left: 20px;
    background-color: #bbbbbb;  /* slider bar color */
    height: 4px;
    position: relative;
    top: 8px;
}
ul.page_button_ul {
    display: inline-block;
    padding: 0px 20px 0px 20px;
}
ul.page_slider_knob_ul {
    margin: 0px;
    display: inline-block;
    padding: 0px;
    position: relative;
    top: -4px;
}
li.page_slider_knob, li.page_button {
    background-color: #b6c769; /* button default bg color */
    color: #ffffff;            /* button default font color */
    text-align: center;
    height: 20px;
    padding-left: 14px;
    padding-right: 14px;
    list-style: none;
    cursor: pointer;
    user-select: none;
    display : table-cell;
    vertical-align: middle;
    transform: translateX(0px);  /* for z-index conflict of slider range object */
}
li.current_button, li.onmouse_button{
    background-color: #7b8a38; /* button active bg color */
}
li.inactive_button{
    background-color: #cccccc; /* button inactive bg color */
}
li.current_button, li.page_slider_knob, li.inactive_button{
    cursor: default;
}
li.page_slider_knob {
    border-radius: 10px;
}
li.prev_button {
    transform: translateX(-10px);
    border-radius: 10px;  
}
li.next_button {
    transform: translateX(10px);
    border-radius: 10px;
}
li.first_button {
    transform: translateX(-20px);
    border-radius: 10px;  
}
li.last_button{
    transform: translateX(20px);
    border-radius: 10px;
}
li.page_button_left {
    padding-left: 24px;
    border-radius: 10px 0px 0px 10px;
}
li.page_button_right {
    padding-right: 24px;
    border-radius: 0px 10px 10px 0px;
}
div.float_left {
    float: left;
}
div.float_right {
    float: right;
}
canvas.slider_range {
    width: 100%;
    height: 100px;
    position: absolute;
    left: 0px;
}
div.slider_range_color {
    background-color: #e0e6ca; /* slider range color */
    display: none;
}
</style>

<div class="main">
  <div id="tableInfo">
    <div class="float_left">Showing <span id="listStart"></span>..<span id="listEnd"></span> of <span id="totalSize"> entries</span></div>
    <div class="float_right">Page size: <select id="pageSizeSelect"></select></div>
  </div>
  <div id="paginationTop"></div>
  <div id="tableBody"></div>
  <div id="paginationBottom"></div>
</div>
